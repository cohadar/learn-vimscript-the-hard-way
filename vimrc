""""""""""""""""""""""""""""""""""""""""
"" BASIC SETTINGS
""""""""""""""""""""""""""""""""""""""""
set nocompatible
syntax on
set number relativenumber numberwidth=4
set nowrap sidescroll=30
set shiftround
set listchars=tab:»—,nbsp:—,trail:…

""""""""""""""""""""""""""""""""""""""""
"" KEY MAPPINGS
""""""""""""""""""""""""""""""""""""""""
let mapleader = " "
let maplocalleader = "\\"
noremap <leader>y y$
noremap <leader>p D"0p
noremap <leader><leader> $
